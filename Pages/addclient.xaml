<Page x:Class="nedvijimost_.Pages.addclient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:nedvijimost_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="addclient">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
            <TextBox Text="Фамилия"
                     Style="{StaticResource txbreg}"
                     Name="txbsurname"
                     GotFocus="txbsurname_GotFocus"/>
            <TextBox Text="Имя"
                     Style="{StaticResource txbreg}"
                     Name="txbname"
                     GotFocus="txbname_GotFocus"/>
            <TextBox Text="Отчество"
                     Style="{StaticResource txbreg}"
                     Name="txbpatronomic"
                     GotFocus="txbpatronomic_GotFocus"/>
            <TextBox Text="Номер телефона"
                     Style="{StaticResource txbreg}"
                     Name="txbnumber"
                     GotFocus="txbnumber_GotFocus_1"/>
            <TextBox Text="Почта"
                     Style="{StaticResource txbreg}"
                     Name="txbemail"
                     GotFocus="txbemail_GotFocus"/>
        </StackPanel>
        <Button VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Margin="25"
                Content="Добавить"
                Background="White"
                FontSize="25"
                Name="btnadd"
                Click="btnadd_Click"/>
    </Grid>
</Page>
